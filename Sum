import java.io.*;
import java.util.*;

public class Main {
    static int maxDigit(int x) {
        int m = 0;
        while (x > 0) {
            m = Math.max(m, x % 10);
            x /= 10;
        }
        return m;
    }

    static long valueInBase(int x, int base) {
        long v = 0, pow = 1;
        while (x > 0) {
            v += (x % 10) * pow;
            pow *= base;
            x /= 10;
        }
        return v;
    }

    static int lengthInBase(long x, int base) {
        int len = 0;
        do {
            len++;
            x /= base;
        } while (x > 0);
        return len;
    }

    public static void main(String[] args) throws Exception {
        BufferedReader br = new BufferedReader(new InputStreamReader(System.in));
        StringTokenizer st = new StringTokenizer(br.readLine());

        int a = Integer.parseInt(st.nextToken());
        int b = Integer.parseInt(st.nextToken());

        int minBase = Math.max(maxDigit(a), maxDigit(b)) + 1;
        int ans = 0;

        for (int base = minBase; base <= 1000; base++) {
            long va = valueInBase(a, base);
            long vb = valueInBase(b, base);
            ans = Math.max(ans, lengthInBase(va + vb, base));
        }

        System.out.print(ans);
    }
}
