import java.util.*;

public class Main {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int n = sc.nextInt(), t = sc.nextInt();
        char[] s = sc.next().toCharArray();

        while (t-- > 0) {
            for (int i = 0; i < n - 1; i++) {
                if (s[i] == 'B' && s[i + 1] == 'G') {
                    s[i] = 'G';
                    s[i + 1] = 'B';
                    i++; // skip next position after swap
                }
            }
        }
        System.out.print(new String(s));
    }
}
